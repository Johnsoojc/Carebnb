<h1>this is ur profile page:</h1>


<p>Welcome to your profile <%= @user.email %></p>

<% @booking.each do |booking| %>
<table>
<tr>
  <th>Destination</th>
  <th>Start Date</th>
  <th>End Date</th>
  <th>No.of.Guest</th>
  <th>Total Price</th>
</tr>
<tr>
  <td><%= link_to booking.listing.title, booking.listing %></td>  <td><%= booking.start_date.strftime('%d %B %Y') %></td>
  <td><%= booking.end_date.strftime('%d %B %Y')  %></td>
  <td><%= booking.num_guests %></td>
  <td><%= booking.total_price %></td>
  <td><%= button_to 'Delete', booking,
      method: :delete,
      data: { confirm: 'Are you sure?' }  %></td>
</tr>

</table>
<% end %>



<%= button_to "Setting", {:action => "edit"}, {:method => "get"}%>

